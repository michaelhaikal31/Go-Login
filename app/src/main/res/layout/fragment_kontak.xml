<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:id="@+id/image_contact"
            android:src="@drawable/background_home"
            android:transitionName="image_contact"/>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0d47a1"
            android:id="@+id/title_contact"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_below="@+id/appbar"
            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Of Scholl"
                android:textColor="#fafafa"
                android:textSize="19dp"
                android:id="@+id/title_of_contact"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f5f5f5"
                android:layout_below="@+id/title_of_contact"
                android:layout_alignParentLeft="@+id/title_of_contact"
                android:text="jl. Kliningan 6 buah batu, kode pos: 40264"
                android:id="@+id/sub_title"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content_of_contact"
            android:layout_below="@+id/title_contact"
            android:padding="10dp"
            android:background="#1565c0"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:onClick="onClick"
                android:id="@+id/call"
                android:layout_marginLeft="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_phone_start"
                />
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1565c0"
                android:layout_below="@+id/image_contact"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(022)7303736"
                    android:textColor="#fafafa"
                    android:textSize="16dp"
                    android:id="@+id/title_of_conten"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e0e0e0"
                    android:layout_below="@+id/title_of_conten"
                    android:layout_alignParentLeft="@+id/title_of_conten"
                    android:text="call"
                    android:id="@+id/sub_title_conten"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_of_contact2"
            android:layout_below="@+id/content_of_contact"
            android:padding="10dp"
            android:background="#1976d2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/email"
                android:layout_marginLeft="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_mail"/>
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1976d2"
                android:layout_below="@+id/image_contact"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info@smkn4bdg.sch.id"
                    android:textColor="#fafafa"
                    android:textSize="16dp"
                    android:id="@+id/title_of_conten2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e0e0e0"
                    android:layout_below="@+id/title_of_conten2"
                    android:layout_alignParentLeft="@+id/title_of_conten2"
                    android:text="email"
                    android:id="@+id/sub_title_conten2"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_of_contact3"
            android:layout_below="@+id/content_of_contact2"
            android:padding="10dp"
            android:background="#1e88e5"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/web"
                android:layout_marginLeft="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_globe"/>
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1e88e5"
                android:layout_below="@+id/image_contact"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="http://smkn4bdg.sch.id"
                    android:textColor="#fafafa"
                    android:textSize="16dp"
                    android:id="@+id/title_of_conten3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e0e0e0"
                    android:layout_below="@+id/title_of_conten3"
                    android:layout_alignParentLeft="@+id/title_of_conten3"
                    android:text="website"
                    android:id="@+id/sub_title_conten3"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_of_contact4"
            android:layout_below="@+id/content_of_contact3"
            android:padding="10dp"
            android:background="#2196f3"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/facebook"
                android:layout_marginLeft="17sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_action_facebook"/>
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196f3"
                android:layout_below="@+id/image_contact"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="facebook.com/smkn4bdg"
                    android:textColor="#fafafa"
                    android:textSize="16dp"
                    android:id="@+id/title_of_conten4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e0e0e0"
                    android:layout_below="@+id/title_of_conten4"
                    android:layout_alignParentLeft="@+id/title_of_conten4"
                    android:text="website"
                    android:id="@+id/sub_title_conten4"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_of_contact5"
            android:layout_below="@+id/content_of_contact4"
            android:padding="10dp"
            android:background="#42a5f5"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/twitter"
                android:layout_marginLeft="20sp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_action_twitter"/>
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#42a5f5"
                android:layout_below="@+id/image_contact"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="twitter.com/smkn4bdg"
                    android:textColor="#fafafa"
                    android:textSize="16dp"
                    android:id="@+id/title_of_conten5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e0e0e0"
                    android:layout_below="@+id/title_of_conten5"
                    android:layout_alignParentLeft="@+id/title_of_conten5"
                    android:text="website"
                    android:id="@+id/sub_title_conten5"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>